@page "{restaurantId:int}"
@model MVCCore_OdeToFood.DetailModel
@{
    ViewData["Title"] = "Detail";
}

@if (Model.Message != null) {
    <div class="alert alert-success">@Model.Message</div>
}

<h2>@Model.Restaurant.Name</h2>
<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

<a asp-page="./Edit" class="btn btn-primary" asp-route-restaurantId="@Model.Restaurant.Id">Edit Restaurant</a>
<a asp-page="./List" class="btn btn-primary">All Restaurants</a>
<a asp-page="./Delete" class="btn btn-primary" asp-route-restaurantId="@Model.Restaurant.Id">Delete Restaurant</a>